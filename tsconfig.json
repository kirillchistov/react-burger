{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    // "jsx": "react",
    "types": [
      "node",
      "cypress",
      "jest"
    ]
  },
  "include": [
    "src",
    "react-app-env.d.ts",
  ],
  "exclude": [
    "./cypress.config.ts",
    "cypress",
    "**/*.cy.tsx",
    "**/*.spec.ts"
  ]
}

